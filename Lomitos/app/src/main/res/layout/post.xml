<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/post_card_view"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="@+id/likes"
        app:layout_constraintStart_toEndOf="@+id/likes">

        <TextView
            android:id="@+id/nombre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/foto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            app:layout_constraintStart_toStartOf="@+id/nombre"
            app:layout_constraintTop_toBottomOf="@+id/nombre"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/likes"
            android:layout_width="102dp"
            android:layout_height="36dp"
            android:layout_marginEnd="11dp"
            app:layout_constraintEnd_toStartOf="@+id/comentar"
            app:layout_constraintTop_toBottomOf="@+id/foto" />

        <ImageView
            android:id="@+id/comentar"
            android:layout_width="72dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_mode_comment_black_24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/foto" />

        <ImageView
            android:id="@+id/detalles"
            android:layout_width="144dp"
            android:layout_height="36dp"
            android:layout_marginStart="83dp"
            android:src="@drawable/ic_more_horiz_black_24dp"
            app:layout_constraintStart_toStartOf="@+id/comentar"
            app:layout_constraintTop_toBottomOf="@+id/foto" />

        <ImageView
            android:id="@+id/paw"
            android:layout_width="42dp"
            android:layout_height="37dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintEnd_toStartOf="@+id/likes"
            app:layout_constraintTop_toBottomOf="@+id/foto"
            app:srcCompat="@drawable/paw" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
<androidx.cardview.widget.CardView/>