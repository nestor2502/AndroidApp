<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    card_view:cardElevation="10dp"
    card_view:cardUseCompatPadding="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#e0eaeb">

        <TextView
            android:id="@+id/id_dog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/nombre"
            android:visibility="invisible" />

        <ImageButton
            android:id="@+id/paw"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/likes"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:backgroundTint="#e0eaeb"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/paw" />

        <TextView
            android:id="@+id/likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/foto"
            android:layout_marginStart="25dp"
            android:layout_marginTop="0dp"
            android:textColor="#000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="10dp"
            android:textColor="#000000"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/comentar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/likes"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/paw"
            android:backgroundTint="#e0eaeb"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/profesor_utonio" />

        <ImageButton
            android:id="@+id/detalles"
            android:layout_width="55dp"
            android:layout_height="50dp"
            android:layout_below="@+id/likes"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/comentar"
            android:backgroundTint="#e0eaeb"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/arrow" />

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/foto"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/nombre"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:scaleType="fitCenter"
            app:srcCompat="@android:drawable/sym_def_app_icon" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>
